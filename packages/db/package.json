{
  "name": "@nexa-oper/db",
  "version": "1.0.0",
  "private": true,
  "description": "Pacote compartilhado de banco de dados com Prisma",
  "main": "./prisma/generated/prisma/index.js",
  "types": "./prisma/generated/prisma/index.d.ts",
  "exports": {
    ".": "./prisma/generated/prisma/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "node ./scripts/with-env.mjs prisma generate",
    "generate": "node ./scripts/with-env.mjs prisma generate",
    "db:generate": "node ./scripts/with-env.mjs prisma generate",
    "migrate:dev": "node ./scripts/with-env.mjs prisma migrate dev",
    "migrate:deploy": "node ./scripts/with-env.mjs prisma migrate deploy",
    "studio": "node ./scripts/with-env.mjs prisma studio",
    "db:reset": "node ./scripts/with-env.mjs prisma migrate reset --force",
    "seed": "node ./scripts/with-env.mjs tsx prisma/seed.ts",
    "db:seed": "node ./scripts/with-env.mjs tsx prisma/seed.ts",
    "postinstall": "node ./scripts/with-env.mjs prisma generate",
    "clean": "rm -rf prisma/generated",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "prisma",
    "database",
    "shared",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "workspaces": [
    "."
  ],
  "devDependencies": {
    "prisma": "^6.15.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}

{
  "name": "@nexa-oper/db",
  "version": "1.0.0",
  "private": true,
  "description": "Pacote compartilhado de banco de dados com Prisma",
  "main": "./generated/prisma/index.js",
  "types": "./generated/prisma/index.d.ts",
  "exports": {
    ".": "./generated/prisma/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "generate": "prisma generate --schema=./prisma",
    "db:generate": "prisma generate --schema=./prisma",
    "migrate:dev": "prisma migrate dev --schema=./prisma",
    "migrate:deploy": "prisma migrate deploy --schema=./prisma",
    "studio": "prisma studio --schema=./prisma",
    "db:reset": "prisma migrate reset --schema=./prisma --force",
    "postinstall": "prisma generate --schema=./prisma",
    "clean": "rm -rf generated",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "prisma",
    "database",
    "shared",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "workspaces": [
    "."
  ],
  "prisma": {
    "schema": "./prisma"
  },
  "devDependencies": {
    "prisma": "^6.15.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}

{
  "name": "@nexa-oper/db",
  "version": "1.0.0",
  "private": true,
  "description": "Pacote compartilhado de banco de dados com Prisma",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate": "prisma generate --schema=./prisma",
    "db:generate": "prisma generate --schema=./prisma",
    "migrate:dev": "prisma migrate dev --schema=./prisma",
    "migrate:deploy": "prisma migrate deploy --schema=./prisma",
    "studio": "prisma studio --schema=./prisma",
    "db:reset": "prisma migrate reset --schema=./prisma --force",
    "postinstall": "prisma generate --schema=./prisma",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "prisma",
    "database",
    "shared",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "workspaces": [
    "."
  ],
  "prisma": {
    "schema": "./prisma"
  },
  "devDependencies": {
    "prisma": "^6.15.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}

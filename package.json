{
  "name": "nexa-oper",
  "version": "1.0.0",
  "description": "Monorepo Nexa Oper com aplicações web, API e pacotes compartilhados",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "install:web": "npm install --workspace=apps/web",
    "install:api": "npm install --workspace=apps/api",
    "install:db": "npm install --workspace=packages/db",
    "db:generate": "npm run db:generate --workspace=packages/db",
    "db:migrate:dev": "npm run migrate:dev --workspace=packages/db",
    "db:migrate:deploy": "npm run migrate:deploy --workspace=packages/db",
    "db:studio": "npm run studio --workspace=packages/db",
    "db:reset": "npm run db:reset --workspace=packages/db",
    "web:dev": "npm run dev --workspace=apps/web",
    "web:build": "npm run build --workspace=apps/web",
    "web:start": "npm run start --workspace=apps/web",
    "api:dev": "npm run start:dev --workspace=apps/api",
    "api:build": "npm run build --workspace=apps/api",
    "api:start": "npm run start:prod --workspace=apps/api",
    "storage:dev": "npm run dev --workspace=apps/storage",
    "storage:build": "npm run build --workspace=apps/storage",
    "storage:start": "npm run start --workspace=apps/storage",
    "storage:generate": "npm run prisma:generate --workspace=apps/storage",
    "storage:migrate": "npm run prisma:migrate --workspace=apps/storage",
    "setup": "npm run install:all && npm run db:generate && npm run build",
    "setup:dev": "npm run install:all && npm run db:generate && npm run dev",
    "reset": "npm run clean && npm run install:all && npm run db:generate",
    "reset:hard": "npm run clean && rm -rf node_modules && npm run install:all && npm run db:generate",
    "status": "turbo run build --dry",
    "check": "npm run lint && npm run build && npm run test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "lint:all": "eslint \"**/*.{js,jsx,ts,tsx,mjs}\" --max-warnings 0",
    "lint:fix:all": "eslint \"**/*.{js,jsx,ts,tsx,mjs}\" --fix",
    "type-check": "turbo run type-check",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "help": "echo '📜 Scripts disponíveis:' && echo '' && echo '🚀 Desenvolvimento:' && echo '  dev, build, lint, test, clean' && echo '' && echo '📦 Instalação:' && echo '  install:all, install:workspaces, install:web, install:api, install:db' && echo '' && echo '🗄️ Banco de Dados:' && echo '  db:generate, db:migrate:dev, db:migrate:deploy, db:studio, db:reset' && echo '' && echo '🌐 Aplicações:' && echo '  web:dev, web:build, web:start, api:dev, api:build, api:start' && echo '' && echo '🛠️ Setup:' && echo '  setup, setup:dev, reset, reset:hard' && echo '' && echo '🔍 Verificação:' && echo '  status, check, format, format:check, lint:all, type-check' && echo '' && echo '🐳 Docker:' && echo '  docker:up, docker:down, docker:logs'",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "keywords": [
    "monorepo",
    "nextjs",
    "nestjs",
    "prisma",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
